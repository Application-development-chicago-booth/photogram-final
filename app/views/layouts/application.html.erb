<!DOCTYPE html>
<html>
  <head>
    <title>PhotogramFinal</title>
    <%= csrf_meta_tags %>

    <!-- Expand the number of characters we can use in the document beyond basic ASCII ðŸŽ‰ -->
    <meta charset="utf-8">

    <!-- Make it responsive to small screens -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
  </head>

  <body>
      <nav>
        <ul>
          <li>
            <a href='/users'> All users </a>
          </li>
          <li>
            <a href='/photos'>All public photos</a>
          </li>
          <%# <li>
            <a href='/user_sign_in'>Sign In</a>
          </li>  
          <li>
            <a href='/user_sign_up'>Sign Up</a>
          </li>
          <li>
            <a href='/user_sign_out'>Sign Out</a>
          </li> %>

          <% if @current_user == nil %>
            <li><a href="/user_sign_in">Sign in</a></li>
            <li><a href="/user_sign_up">Sign up</a></li>
          <% else %>
            <li><a href="/edit_user_profile">Edit <%= @current_user.first_name %></a></li>
            <li><a href="/user_sign_out">Sign out</a></li>
          <% end %>
          

          <%# <li>
            <%= session.fetch(:user_id) %>
          <%# </li> %>

        </ul>
      </nav>  
      
      <% if notice.present? %>
        <%# <div style='border: thin green solid; color: green'> %>
        <div>
          <%= notice %>
        </div>
      <% end %>

      <% if alert.present? %>
        <%# <div style='border: thin red solid; color: red'> %>
        <div>
          <%= alert %>
        </div>
      <% end %>

      <%= yield %>
  </body>
</html>

